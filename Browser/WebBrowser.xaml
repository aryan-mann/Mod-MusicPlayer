<Window x:Class="Browser.WebBrowser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Browser"
        mc:Ignorable="d"
        Title="WebBrowser" Height="600" Width="900" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid Margin="0,0,0,0">
        <WebBrowser x:Name="UWeb" Margin="0,30,0,0"/>
        <Grid Height="30" Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <TextBox x:Name="NavUrl" Height="30" Margin="0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center" Padding="30,0,0,0"/>
        </Grid>
    </Grid>
</Window>
