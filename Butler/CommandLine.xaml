<Window x:Class="Butler.CommandLine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Butler"
        mc:Ignorable="d"
        Title="CommandLine" Height="109" Width="600" WindowStyle="None" WindowStartupLocation="CenterOwner" Visibility="Visible">
    <Grid x:Name="Grd" Background="#FFF1F1F1">
        <TextBox x:Name="Input" Text="Enter Command Here" VerticalAlignment="Top" Margin="5,5,5,0" Height="55" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="36" Background="White" MaxLines="1"/>
        <StatusBar VerticalAlignment="Bottom" VerticalContentAlignment="Center" Height="32" Background="#FFBBBBBB">
            <Label x:Name="CurrentStatus" Content="Good to go!"/>
        </StatusBar>

    </Grid>
</Window>
